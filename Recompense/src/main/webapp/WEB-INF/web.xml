<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>Hello</servlet-name>
  	<display-name>HelloServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.HelloServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CreateEmployee</servlet-name>
  	<display-name>CreateEmployee</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.CreateEmployee</servlet-class>
  </servlet>
 
  <servlet>
  	<servlet-name>HomepageServlet</servlet-name>
  	<display-name>HomepageServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.HomepageServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EmployeeServlet</servlet-name>
  	<display-name>EmployeeServlet</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.EmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>Hello</servlet-name>
  <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateEmployee</servlet-name>
  	<url-pattern>/CreateEmployee</url-pattern>
  </servlet-mapping>
 
  <servlet-mapping>
  	<servlet-name>HomepageServlet</servlet-name>
  	<url-pattern>/HomepageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EmployeeServlet</servlet-name>
  	<url-pattern>/EmployeeServlet</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	 <welcome-file>/html/login.html</welcome-file>
   </welcome-file-list>
</web-app>
